<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="eventListener"
            type="app.te.architecture.presentation.home.eventListener.HomeEventListener" />

        <variable
            name="uiState"
            type="app.te.architecture.presentation.home.ui_state.CategoriesUiItemState" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()-> eventListener.openVideos(uiState.id,uiState.contentType)}">

            <ProgressBar
                android:id="@+id/loadingProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/cat_image"
                app:layout_constraintEnd_toEndOf="@+id/cat_image"
                app:layout_constraintStart_toStartOf="@id/cat_image"
                app:layout_constraintTop_toTopOf="@+id/cat_image" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_6sdp"
                android:scaleType="centerCrop"
                android:src="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loadImage="@{uiState.categoryImage()}"
                app:progressBar="@{loadingProgress}"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_menu_name"
                style="@style/TextMediumFont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{uiState.categoryName()}"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/ic_favorite"
                app:layout_constraintStart_toEndOf="@+id/cat_image"
                app:layout_constraintTop_toTopOf="@id/cat_image"
                tools:text="Burger" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ic_favorite_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cat_image" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                android:progressTint="@color/colorPrimary"
                android:rating="3.5"
                app:layout_constraintStart_toEndOf="@id/cat_image"
                app:layout_constraintTop_toBottomOf="@id/tv_menu_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_menu_price"
                style="@style/TextMediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:text="@{uiState.categoryName()}"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/cat_image"
                app:layout_constraintTop_toBottomOf="@id/rating"
                tools:text="50 SAR - 80 SAR" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_menu_price_old"
                style="@style/TextMediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{uiState.categoryName()}"
                android:textAlignment="viewStart"
                android:textColor="@color/medium_color"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/tv_menu_price"
                app:layout_constraintTop_toBottomOf="@id/tv_menu_price"
                tools:text="50 SAR - 80 SAR" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/medium_color"
                app:layout_constraintBottom_toBottomOf="@id/tv_menu_price_old"
                app:layout_constraintEnd_toEndOf="@id/tv_menu_price_old"
                app:layout_constraintStart_toStartOf="@id/tv_menu_price_old"
                app:layout_constraintTop_toTopOf="@id/tv_menu_price_old" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@android:drawable/ic_input_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rating"
                app:tint="@color/black" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>